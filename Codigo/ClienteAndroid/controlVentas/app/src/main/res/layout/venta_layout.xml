<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridCliente"
        android:layout_width="368dp"
        android:layout_height="154dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="1"
        android:padding="15dp"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022">



        <TextView
            android:id="@+id/lblFechaVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha venta" />

        <TextView
            android:id="@+id/lblNombreClienteVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Nombre Cliente" />

        <TextView
            android:id="@+id/lblTotalVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="$" />

        <TextView
            android:id="@+id/lblEstadoVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="250dp"
            android:paddingTop="15dp"
            android:text="En proceso" />


    </GridLayout>


</android.support.constraint.ConstraintLayout>